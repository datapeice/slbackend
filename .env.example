# Переменные окружения для Spring Boot приложения

# Security
SPRING_SECURITY_KEY=<generate: openssl rand -base64 64>

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/slbackend
POSTGRES_USER=slbackend_user
POSTGRES_PASSWORD=slbackend_password

# MinIO / S3-compatible storage
# For LOCAL dev: use local MinIO (docker-compose)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=slbackend-avatars
MINIO_REGION=

# For HEROKU: use Bucketeer add-on (free 5GB, AWS S3)
# heroku addons:create bucketeer:hobbyist
# These are set automatically by Bucketeer:
# BUCKETEER_AWS_ACCESS_KEY_ID=...
# BUCKETEER_AWS_SECRET_ACCESS_KEY=...
# BUCKETEER_BUCKET_NAME=...
# BUCKETEER_AWS_REGION=us-east-1
# Also set: MINIO_ENDPOINT=https://s3.amazonaws.com

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=storylegends.xyz
MAILGUN_FROM_EMAIL=noreply@storylegends.xyz
MAILGUN_FROM_NAME=StoryLegends
MAILGUN_BASE_URL=https://api.eu.mailgun.net

# Google reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here
RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here

# Application URLs
FRONTEND_URL=https://www.storylegends.xyz
BASE_URL=http://localhost:8080

# Discord Bot
DISCORD_BOT_ENABLED=false
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-guild-id
DISCORD_SL_ROLE_ID=your-sl-role-id
